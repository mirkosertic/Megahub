{
  "name": "megahub-frontend",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --mode dev",
    "dev:bt": "vite --mode bt",
    "build:bt": "vite build --mode bt --base=/Megahub/",
