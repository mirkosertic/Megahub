    "build:all": "npm run build:bt && npm run build:web"    
  },
  "devDependencies": {
    "browserlist": "^1.0.2",
    "lightningcss": "^1.30.2",
    "vite": "^5.0.0",
    "vite-plugin-compression": "^0.5.1"
  },
  "dependencies": {
    "@blockly/field-colour": "^6.0.8",
    "blockly": "^12.3.1",
    "prismjs": "^1.30.0"
  }
}
